# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pdr_dev

# JWT
JWT_SECRET=your-secret-key-here-min-32-chars
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-here-min-32-chars
JWT_REFRESH_EXPIRATION=7d

# Redis
REDIS_URL=redis://localhost:6379

# API
API_VERSION=v1
API_PREFIX=api

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Payment (Webpay)
WEBPAY_COMMERCE_CODE=your-commerce-code
WEBPAY_API_KEY=your-api-key

# S3/Storage
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=pdr-bucket

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
