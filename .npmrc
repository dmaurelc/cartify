# pnpm configuration for cartify project

# Use the .pnpmfile.cjs for custom hooks if needed
# shamefully-hoist is false by default in pnpm v3+
# This ensures dependencies are properly isolated

# Ensure pnpm uses the correct Node version
engine-strict=true

# Enable hoisting of root dependencies (optional)
shamefully-hoist=false

# Set registry (optional, uses npm registry by default)
# registry=https://registry.npmjs.org/

# Enable strict peer dependencies checking
strict-peer-dependencies=true
